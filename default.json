{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    "schedule:daily"
  ],
  "assigneesFromCodeOwners": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "groupName": "Docker",
      "groupSlug": "docker",
      "addLabels": [
        "docker"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions",
      "addLabels": [
        "github_actions"
      ]
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Non-major NuGet dependencies",
      "groupSlug": "non-major-nuget-dependencies",
      "addLabels": [
        "dependencies",
        ".NET"
      ]
    },
    {
      "matchManagers": [
        "nuget"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "dependencies",
        ".NET",
        "breaking"
      ]
    },
    {
      "matchManagers": [
        "terraform",
        "tflint-plugin"
      ],
      "groupName": "Terraform providers and TFLint plugins",
      "groupSlug": "terraform-providers-and-tflint-plugins",
      "addLabels": [
        "terraform"
      ]
    }
  ]
}
